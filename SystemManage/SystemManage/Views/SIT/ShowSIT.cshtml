<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
@{
    if (Session["userID"] == null && Session["ProjectID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
@{
    ViewBag.Title = "SIT";
    Layout = "~/Views/Shared/_MainMenu.cshtml";
}
@using SystemManage.Models;
@model SystemManage.Models.SITModel
<div id="flip"><center><i class="fas fa-arrow-down"></i></center></div>
<div class="card">
    <div class="card-body" style="margin: auto" id="panel">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1 class="text-center" style="margin-bottom: 20pt">SIT</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-4">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">Task :</label>
                    <div class="rs-select2 js-select-simple select--no-search " style="width: 100px">
                        <select name="subject">
                            <option>All</option>
                            <option>Pause</option>
                            <option>Terminate</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">Sub Task :</label>
                    <div class="rs-select2 js-select-simple select--no-search " style="width: 100px">
                        <select name="subject">
                            <option>0</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">Dev :</label>
                    <div class="rs-select2 js-select-simple select--no-search ">
                        <select name="subject">
                            <option>All</option>
                            <option>Pause</option>
                            <option>Terminate</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">Tester :</label>
                    <div class="rs-select2 js-select-simple select--no-search ">
                        <select name="subject">
                            <option>0</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">QA :</label>
                    <div class="rs-select2 js-select-simple select--no-search ">
                        <select name="subject">
                            <option>All</option>
                            <option>Pause</option>
                            <option>Terminate</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <label class="label" for="subject" style="margin-right: 10px">Status :</label>
                    <div class="rs-select2 js-select-simple select--no-search ">
                        <select name="subject">
                            <option>0</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div style="margin: auto;margin-top: 20px">
                <button type="button" class="btn btn-primary">Search</button>
                <button type="button" class="btn btn-basic">Clear</button>
            </div>

        </div>
    </div>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-9"></div>
        <div class="col-sm-1">
            @{
                if (Model.CreateBy == Convert.ToInt32(Session["userID"]))
                {
                    <a href="@Url.Action("AddSIT", "SIT")"><button type="button" class="btn btn-success btn-block">ทดสอบ</button></a>
                }
            }
        </div>
        <div class="col-sm-1">
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12 " style="overflow-x:auto">
                <table class="table table-bordered">
                    <thead>
                        <tr class="table-info">
                            <th><center>ลำดับ</center></th>
                            <th><center>ชื่อ</center></th>
                            <th><center>รายละเอียด</center></th>
                            <th><center></center></th>
                            @{
                                if (Model.CreateBy == Convert.ToInt32(Session["userID"]))
                                {
                                    <th><center>ลบ</center></th>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int n = 1;
                            foreach (var i in (List<SITModel>)ViewBag.DataList)
                            {
                                <tr>
                                    <td><center>@n</center></td>
                                    <td><center>@i.Name</center></td>
                                    <td><center>@i.Detail</center></td>
                                    <td><center>@i.CreateDate</center></td>
                                </tr>
                                ++n;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>