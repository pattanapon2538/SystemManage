@using SystemManage.Models;
@model SystemManage.Models.ProjectModel
@{
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<html lang="en">
<head>
    <title>My Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="shortcut icon" type="~/image/png" href="~/assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/metisMenu.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/slicknav.min.css">
    <style>
        #sr {
            background-image: url('https://www.w3schools.com/css/searchicon.png');
            background-position: 10px 12px;
            background-repeat: no-repeat;
            width: 100%;
            font-size: 16px;
            padding: 12px 20px 12px 40px;
            border: 1px solid #ddd;
            margin-bottom: 12px;
            border-radius: 18px;
        }
    </style>


    <script>
        $(document).ready(function () {
            $("#sr").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tb tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</head>
<body>

    <div class="container">
        <div class="card shadow" style="margin-top: 100px">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center" style="margin-bottom:-20px">โครงการของฉัน</h2>
                        <div align="right"><input type="text" id="sr" onkeyup="myFunction()" placeholder="ค้นหา"></div>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table-info">
                                    <th><center>เข้า</center></th>
                                    <th><center>ลำดับ</center></th>
                                    <th><center>โครงการ</center></th>
                                    <th><center>สถานะ</center></th>
                                    <th><center>ความคืบหน้า</center></th>
                                    <th><center>กำหนดส่ง</center></th>
                                    <th><center>ผู้จัดการโครงการ</center></th>
                                    <th><center>รายละเอียด</center></th>
                                    @if (Model.UserRole == 1)
                                    {
                                        <th><center>แก้ไข</center></th>
                                        <th><center>ลบ</center></th>
                                    }

                                </tr>
                            </thead>
                            <tbody id="tb">
                                @{
                                    var role = 0;
                                    var i = 1;
                                    foreach (var item in (List<ProjectModel>)ViewBag.DataList)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Getdata", new { ProjectID = item.ProjectID })"><center><i class="fas fa-door-open"></i></center></a></td>
                                            <td><center>@i</center></td>
                                            <td><center>@item.ProjectName</center></td>
                                            @if (item.ProjectStatus == 1)
                                            {
                                                <td><center>Processing</center></td>
                                            }
                                            else if (item.ProjectStatus == 2)
                                            {
                                                <td><center>Pause</center></td>
                                            }
                                            else if (item.ProjectStatus == 3)
                                            {
                                                <td><center>Terminate</center></td>
                                            }
                                            @{
                                                item.TotalPercent = item.TotalPercent / 100;
                                            }
                                            <td><center>@item.TotalPercent.ToString("P02")</center></td>
                                            <td><center>@item.ProjectSendDate.ToString("dd/MM/yyyy")</center></td>
                                            <td><center>@item.CreateBy</center></td>
                                            <td>
                                                <center>
                                                    <a href="@Url.Action("DetailProject",new { ProjectID = item.ProjectID})"><i class="fas fa-book-open"></i></a>
                                                </center>
                                            </td>
                                            @if (item.ProjectRole == 1)
                                            {
                                                <td>
                                                    <center>
                                                        <a href="@Url.Action("EditProject", new { ProjectID = item.ProjectID })"><i class="fas fa-wrench"></i></a>
                                                    </center>
                                                </td>
                                                <td>
                                                    <center>
                                                        <a href="@Url.Action("DeleteProject", new { ProjectID = item.ProjectID })"><i class="fas fa-backspace"></i></a>
                                                    </center>
                                                </td>
                                            }
                                        </tr>
                                        role = @item.ProjectRole;
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <div class="col-sm-3 ">
            </div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3">
                @if (role != 5)
                {<a href="@Url.Action("AddProject")"><button type="button" class="btn btn-outline-primary btn-block shadow">สร้างโครงการ</button></a>}
            </div>

        </div>
    </div>

</body>
</html>
